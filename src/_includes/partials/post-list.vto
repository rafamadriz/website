<ul class="archive-list">
    {{ for page of search.pages("url^=/blog/ !page.src.path=/blog/index", "date=desc") }}
    {{ set title = page.title }}
    {{ set date = page.date }}
    {{ set url = page.url }}
    <li>
        <a href="{{ url }}">
            {{ title |> smartypants }}
        </a>
        <time datetime="{{ date |> date("DATETIME") }}">{{ date |> date("MMMM dd, yyyy") }}</time>
    </li>
    {{ /for }}
</ul>
