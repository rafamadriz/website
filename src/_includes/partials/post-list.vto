<ul class="archive-list">
    {{ for page of search.pages("url^=/blog/ !page.src.path=/blog/index", "date=desc") }}
    {{ set title = page.title }}
    {{ set date = page.date }}
    {{ set url = page.url }}
    <li>
        <a href="{{ url }}">
            {{ title }}
        </a>
        <time datetime="{{ date.toUTCString() }}">{{ Intl.DateTimeFormat("en-GB", { day: "2-digit", month: "long", year: "numeric", timeZone: "UTC"}).format(date) }}</time>
    </li>
    {{ /for }}
</ul>
