{{ layout  "layouts/base.vto" }}

<article>
    <header>
        <h1>{{ title }}</h1>
    </header>

    <section class="main-content">
        {{ if content |> toc }}
        <details open="true">
            <summary>Table of contents</summary>
            <nav class="toc">
                {{ content |> toc }}
            </nav>
        </details>
        {{ /if }}

        <div class="content">
            {{ content }}
        </div>
    </section>

</article>
{{ /layout }}
