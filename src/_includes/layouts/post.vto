{{ layout  "layouts/base.vto" }}

<header>
    <h1>{{ title |> smartypants }}</h1>
</header>

{{ set toc = content |> toc }}
{{ if toc.length > 4 }}
<details open="true">
    <summary>Table of contents</summary>
    <nav class="toc">
        {{ toc.list }}
    </nav>
</details>
{{ /if }}

{{ content }}

{{ /layout }}
